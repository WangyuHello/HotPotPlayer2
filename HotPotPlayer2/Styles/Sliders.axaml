<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20" Background="Gray">
      <!-- Add Controls for Previewer Here -->
		<Slider Width="200" Classes="PlaySliderStyle"/>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
	<Style Selector="Slider.PlaySliderStyle">
		<Setter Property="Foreground" Value="#6982F9"/>
	</Style>
	<Style Selector="Slider.PlaySliderStyle Thumb">
		<Setter Property="Background" Value="White" />
		<Setter Property="Width" Value="18" />
		<Setter Property="Height" Value="18" />
	</Style>
	<Style Selector="Slider.PlaySliderStyle:pointerover Thumb">
		<Setter Property="Background" Value="#6982F9" />
	</Style>
	<Style Selector="Slider.PlaySliderStyle:pressed /template/ Thumb#thumb">
		<Setter Property="RenderTransform" Value="scale(1.2)" />
	</Style>
	<Style Selector="Slider.PlaySliderStyle:pointerover RepeatButton#PART_DecreaseButton">
		<Setter Property="Background" Value="#6982F9" />
	</Style>
	<Style Selector="Slider.PlaySliderStyle RepeatButton /template/ Border#TrackBackground">
		<Setter Property="Height" Value="3"/>
	</Style>


	<Style Selector="Slider.VolumeSliderStyle RepeatButton /template/ Border#TrackBackground">
		<Setter Property="Height" Value="3"/>
	</Style>
</Styles>
